{
    "swagger": "2.0",
    "info": {
        "description": "A TODO APP API in Go using Gin framework.",
        "title": "Todo App API",
        "contact": {
            "name": "Amadi Jerry",
            "url": "https://twitter.com/Jerry_Jaeger_",
            "email": "amadijerry823@gmail.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/todos",
    "paths": {
        "/": {
            "get": {
                "description": "Responds with the list of all Todos as JSON.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "todos"
                ],
                "summary": "Get Todos array",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Todo"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Todo": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "completed": {
                    "type": "boolean"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                }
            }
        }
    }
}